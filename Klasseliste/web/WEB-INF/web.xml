<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  
    <resource-ref>
        <res-ref-name>jdbc/classlist</res-ref-name>
        <res-type> javax.sql.DataSource</res-type>
        <res-auth> Container</res-auth>
    </resource-ref>
    
 <servlet>
        <servlet-name>UploadFileController</servlet-name>
        <servlet-class>controller.UploadFileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadFileController</servlet-name>
        <url-pattern>/UploadFileController</url-pattern>
    </servlet-mapping>

    <servlet>
  <servlet-name>fileView</servlet-name>
  <servlet-class>Servlets.fileView</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>fileView</servlet-name>
  <url-pattern>/fileView</url-pattern>
</servlet-mapping>

    <session-config>
<!-- Sessions will be automatically terminated (i.e. logged out) after 30 minutes of inactivity -->
<session-timeout> 30 </session-timeout>
</session-config>
<!-- A security constraint is a limit on what the users can do. The constraint is enforced by tomcat, no programming is needed All necessary info is in this file -->
<security-constraint>
<!-- to access these pages -->
<web-resource-collection>
<web-resource-name>UserResources</web-resource-name>
<url-pattern>/Student.jsp</url-pattern>
</web-resource-collection>
<!-- the user must have one of these roles -->
<auth-constraint>
<role-name>RolodexUser</role-name>
<role-name>RolodexAdmin</role-name>
</auth-constraint>
</security-constraint>
<security-constraint>
<web-resource-collection>
<web-resource-name>AdminResources</web-resource-name>
<url-pattern>/Foreleser.jsp</url-pattern>
</web-resource-collection>
<auth-constraint>
<role-name>RolodexAdmin</role-name>
</auth-constraint>
</security-constraint>
<!-- the available roles -->
<security-role>
<role-name>RolodexUser</role-name>
</security-role>
<security-role>
<role-name>RolodexAdmin</role-name>
</security-role>
<!-- which realm to use -->
<login-config>
<auth-method>BASIC</auth-method>
<realm-name>DataSourceRealm</realm-name>
</login-config>
<welcome-file-list>
<welcome-file>Home.jsp</welcome-file>
</welcome-file-list>
</web-app>
